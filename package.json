{
  "name": "ez-clasp",
  "version": "0.0.2",
  "author": "cristobalgvera",
  "description": "Google Apps Script starter project with TypeScript support",
  "license": "MIT",
  "main": "src/index.ts",
  "engines": {
    "node": ">= 12"
  },
  "scripts": {
    "build": "rollup --config",
    "build:clean": "rimraf build/",
    "build:watch": "npm run build -- --watch",
    "clasp:create": "rimraf .clasp.json && clasp create",
    "clasp:login": "clasp login",
    "deploy": "npm run check:all && npm run build && npm run push",
    "format:check-all": "npm run format:check-file -- .",
    "format:check-file": "prettier --check",
    "format:fix-all": "npm run format:fix-file -- .",
    "format:fix-file": "prettier --write",
    "lint:check-all": "npm run lint:check-file -- .",
    "lint:check-file": "eslint --ext ts --ext js --max-warnings 0",
    "lint:fix-all": "npm run lint:check-all -- --cache --fix",
    "lint:fix-file": "npm run lint:check-file -- --cache --fix",
    "prepare": "husky install",
    "push": "clasp push",
    "push:watch": "npm run push -- --watch",
    "test": "jest",
    "test:file": "jest --bail --findRelatedTests",
    "test:watch": "npm run test -- --watchAll",
    "check:all": "npm run lint:check-all && npm run format:check-all && npm run types:check && npm test",
    "types:check": "tsc"
  },
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.14.8",
    "@babel/preset-typescript": "^7.14.5",
    "@google/clasp": "^2.4.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@types/google-apps-script": "^1.0.37",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.4.5",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "eslint": "^8.4.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "gts": "^3.1.0",
    "husky": "^7.0.0",
    "jest": "^27.3.1",
    "lint-staged": ">=10",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.55.0",
    "ts-jest": "^27.0.7",
    "typescript": "^4.5.2"
  },
  "keywords": [
    "clasp",
    "google-apps-script",
    "gas",
    "typescript",
    "rollup-js",
    "prettier",
    "eslint",
    "javascript",
    "babel",
    "husky",
    "lint-staged"
  ],
  "lint-staged": {
    "**/*.{js,ts}": [
      "npm run lint:fix-file",
      "npm run format:fix-file",
      "npm run types:check",
      "npm run test:file"
    ]
  }
}
