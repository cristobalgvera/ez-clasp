{
  "name": "ez-clasp",
  "version": "0.0.4",
  "author": "cristobalgvera",
  "description": "Google Apps Script starter project with TypeScript support",
  "license": "MIT",
  "private": true,
  "main": "src/index.ts",
  "engines": {
    "node": ">= 16"
  },
  "scripts": {
    "build": "rollup --config",
    "build:clean": "rimraf build/",
    "build:watch": "pnpm build --watch",
    "check:all": "pnpm lint --write && pnpm test",
    "clasp:create": "rimraf .clasp.json && clasp create --rootDir . --title CHANGE_MY_NAME && pnpm lint --write .clasp.json",
    "clasp:login": "clasp login",
    "deploy": "npm run check:all && npm run build && npm run push",
    "lint": "biome check",
    "prepare": "husky install",
    "push": "clasp push",
    "test": "jest",
    "test:cov": "pnpm test --coverage",
    "test:watch": "pnpm test --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/plugin-transform-runtime": "^7.22.15",
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-typescript": "^7.23.0",
    "@biomejs/biome": "2.2.4",
    "@golevelup/ts-jest": "^0.4.0",
    "@google/clasp": "^2.4.2",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@rollup/plugin-typescript": "^11.1.4",
    "@types/google-apps-script": "^1.0.72",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.7.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "rimraf": "^5.0.5",
    "rollup": "^3.29.4",
    "rollup-plugin-dotenv": "^0.5.0",
    "ts-jest": "^29.1.1",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "ultracite": "5.4.4"
  },
  "keywords": [
    "clasp",
    "google-apps-script",
    "gas",
    "typescript",
    "rollup-js",
    "prettier",
    "eslint",
    "javascript",
    "babel",
    "husky",
    "lint-staged"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "pnpm dlx ultracite fix"
    ]
  }
}
